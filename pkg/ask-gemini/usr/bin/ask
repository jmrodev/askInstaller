    #!/bin/bash                                                          
                                                                         
    # Validación de dependencia jq                                       
    if ! command -v jq &> /dev/null                                      
    then                                                                 
        echo "Error: jq no está instalado. Es necesario para analizar JSON." >&2
        exit 1                                                           
    fi                                                                   
                                                                         
    # Configuración                                                      
    MODEL="gpt-3.5-turbo"                                                
    API_URL="https://api.openai.com/v1/chat/completions"                 
                                                                         
    # Obtener la clave API                                               
    OPENAI_API_KEY=$OPENAI_API_KEY                                       
                                                                         
    if [ -z "$OPENAI_API_KEY" ]                                          
    then                                                                 
        echo "Error: La variable de entorno OPENAI_API_KEY no está configurada."
  >&2                                                                    
        exit 1                                                           
    fi                                                                   
                                                                         
    # Preparar el payload JSON                                           
    DATA='{                                                              
      "model": "'"$MODEL"'",                                             
      "messages": [                                                      
        {                                                                
          "role": "user",                                                
          "content": "'"$@"'""                                           
        }                                                                
      ]                                                                  
    }'                                                                   
                                                                         
    # Llamar a la API de OpenAI                                          
    RESPONSE=$(curl -s -H "Content-Type: application/json" \             
                 -H "Authorization: Bearer $OPENAI_API_KEY" \            
                 -d "$DATA" "$API_URL")                                  
                                                                         
    # Verificar la respuesta                                             
    if [ -z "$RESPONSE" ]                                                
    then                                                                 
        echo "Error: No se recibió respuesta de la API." >&2             
        exit 1                                                           
    fi                                                                   
                                                                         
    # Extraer y mostrar el contenido                                     
    CONTENT=$(echo "$RESPONSE" | jq -r '.choices[0].message.content')    
                                                                         
    if [ -z "$CONTENT" ]                                                 
    then                                                                 
        echo "Error: No se pudo extraer el contenido de la respuesta." >&2
        echo "Respuesta completa:" >&2                                   
        echo "$RESPONSE" >&2                                             
        exit 1                                                           
    fi                                                                   
                                                                         
    echo "$CONTENT"                                                      
                                                                         
    exit 0                                    
